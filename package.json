{
  "name": "@broadmountain/supabase-cms-react",
  "private": false,
  "version": "1.3.0",
  "type": "module",
  "description": "A React library for content management using Supabase",
  "keywords": [
    "react",
    "supabase",
    "cms",
    "content-management",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.es.js",
      "require": "./dist/components.js"
    },
    "./providers": {
      "types": "./dist/providers.d.ts",
      "import": "./dist/providers.es.js",
      "require": "./dist/providers.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.es.js",
      "require": "./dist/hooks.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.es.js",
      "require": "./dist/types.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npm-run-all2 -p dev:*",
    "dev:example": "npm run dev --prefix example",
    "build": "tsc -b && vite build",
    "build:lib": "npm run clean && npm run build:types && vite build --config vite.lib.config.ts",
    "build:types": "tsc --project tsconfig.lib.json",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "docs:generate": "typedoc",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib && npm run lint",
    "types:supabase": "supabase gen types typescript --local > src/types/database/supabase.ts && prettier --write src/types/database/supabase.ts",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@tailwindcss/vite": "4.1.7",
    "@types/bcrypt": "^5.0.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.4.1",
    "daisyui": "5.0.43",
    "dotenv": "16.5.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.0",
    "semantic-release": "^24.2.5",
    "supabase": "2.24.3",
    "tailwindcss": "4.1.7",
    "tsx": "4.19.4",
    "typedoc": "^0.28.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "bcrypt": "^6.0.0"
  }
}